{
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": ["eslint:recommended","vue"],
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"global-require":[
			"error"
		],
		"no-trailing-spaces":2
	}
}
